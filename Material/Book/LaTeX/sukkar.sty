% Re-baptize common environments with a Hebrew name.

\def\@EnvironmentAlias  #1 | #2 | {%
  \expandafter\def\csname#2\endcsname{\csname#1\endcsname}\relax
  \expandafter\def\csname end#2\endcsname{\csname end#1\endcsname}\relax
}

