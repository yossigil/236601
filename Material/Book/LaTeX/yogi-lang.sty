\let\NonCitingUseX=\MentionX
\newcommand\NonCitingUse[1]{\MentionX{#1}}

\newcommand \MentionX[1]{\csname mention#1\endcsname}
\newcommand \Mention[1]{\MentionX{#1}}
\newcommand \@IgnoreLanguageCitation[1]{%
    \expandafter\gdef\csname#1\endcsname{\csname mention#1\endcsname}%
}
\newcommand \StopLanguageCitation[1]{%
\expandafter\gdef\csname#1\endcsname{\csname mention#1\endcsname\xspace}%
}


\def\@LANG#1#2#3{%
    \expandafter\gdef\csname mention#1\endcsname{#3}% Define the base version, as e.g., \mentionJava
    \expandafter\gdef\csname#1\endcsname{% First time invocation.
        \MentionX{#1}\relax      % Invoke the base version.
        \StopLanguageCitation{#1}\relax % Reset the definition for all future uses.
         ~#2\relax                    % Append the citation.
        \xspace
    }%
    \xspace
}
\newcommand \NewLanguageCitation[2]{\@LANG{#1}{\textup{#2}}{\renderLanguage{#1}}}
\newcommand \NewLangaugeCitationSpecial[3]{\@LANG{#1}{#2}{#3}}

